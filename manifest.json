{
  "manifest_version": 3,
  "name": "MemoNest",
  "version": "1.0",
  "description": "A Chrome extension for enhancing English vocabulary learning.",
  "permissions": [
    "storage",
    "activeTab"
]
,
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
